<%- include('../header') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg></a></li>
            <li class="active">Chi tiết hóa đơn</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Chi tiết hóa đơn</h1>
        </div>
    </div>
    <!--/.row-->
    <!-- <div id="toolbar" class="btn-group">
        <a href="add_category.html" class="btn btn-success">
            <i class="glyphicon glyphicon-plus"></i> Thêm giỏ hàng
        </a>
    </div> -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toolbar="#toolbar" data-toggle="table">

                        <thead>
                            <tr>
                                <th data-field="id" data-sortable="true">Mã hóa đơn</th>
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Ảnh sản phẩm</th>
                                <th>Giá sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>

                            </tr>
                        </thead>
                        <tbody>
                         
                            <% invoices.product_detail.forEach(i => { %>
                    
                            <tr>
                                <td ><%= invoices._id %> </td>
                                <td ><%= i._id %> </td>
                                <td><%= i.name %> </td>
                                <td><img src="./../../<%= i.avatar %> " alt="" height="150" width="100"> </td>
                                <td><%= i.sale_price.toLocaleString() %> </td>
                                <td><%= i.qty %> </td>
                                <td><%= (i.sale_price*i.qty).toLocaleString() %> </td>
                            </tr>
                      
                            <%}) %>
                      




                        </tbody>
                    </table>
                </div>
        
            </div>
        </div>
    </div>
    <!--/.row-->
</div>

<%- include('../footer') %>