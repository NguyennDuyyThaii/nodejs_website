<%- include('../header') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg></a></li>
            <li class="active">Quản lý bài viết</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản lý bài viết</h1>
        </div>
    </div>
    <!--/.row-->
    <div id="toolbar" class="btn-group">
        <a href="/post/add" class="btn btn-success">
            <i class="glyphicon glyphicon-plus"></i> Thêm bài viết
        </a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                        <% if(success != null){ %>
                            <% success.forEach(element => { %>
                            <div class="alert alert-success"><%= element %> </div>
                            <%   }); %>
                            <%  %>
                            <% } %>
                    <table data-toolbar="#toolbar" data-toggle="table" class="table">

                        <thead>
                            <tr>
                                <th data-field="id" data-sortable="true" style="text-align: center">ID</th>
                                <th style="text-align: center">Tên bài viết</th>
                                <th style="text-align: center">Hình ảnh</th>
                                <th style="text-align: center">Mô tả ngắn</th>
                                <th style="text-align: center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% post.forEach(item => { %> 
                            <tr>
                                <td style="text-align: center"><%=item._id  %> </td>
                                <td style="text-align: center"><%=item.title  %></td>
                                <td style="text-align: center"><img width="130" height="180" src="<%=item.avatar %>" />
                                </td>
                                <td style="text-align: center"><%-item.short_detail  %> </td>
                                <td class="form-group">
                                    <a href="/post/edit/<%=item._id  %> " class="btn btn-primary"><i
                                            class="glyphicon glyphicon-pencil"></i></a>
                                    <a href="/post/remove/<%=item._id %> " class="btn btn-danger"
                                        onclick="return alert('Bạn có muốn xóa không!')"><i
                                            class="glyphicon glyphicon-remove"></i></a>
                                </td>
                            </tr>
                            <% }) %> 
                        </tbody>
                    </table>
                </div>
                <div id="pagination">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="?page=<%=pagePrev%>">Trang trước</a></li>
                        <%
                            for(i=1; i<=totalPage; i++){
                            %>
                        <li class="page-item"><a class="page-link" href="?page=<%=i%>"><%=i%></a></li>
                        <%
                            }
                            %>
                        <li class="page-item"><a class="page-link" href="?page=<%=pageNext%>">Trang sau</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--/.row-->
</div>
<!--/.main-->
<%- include('../footer') %>