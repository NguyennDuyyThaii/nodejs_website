<%- include('./header') %>
<!--	End Slider	-->
<!--	Feature Product	-->
<br>
<div class="dropdown">
    <button class="dropbtn">Xem sản phẩm theo yêu cầu</button>
    <div class="dropdown-content">
        <a href="/increase">Xem theo giá thứ tự tăng dần</a>
        <a href="/deincrease">Xem theo giá thứ tự giảm dần</a>
        <a href="/alphabet">Xem theo thứ tự chữ cái</a>
    </div>
</div>
<br>

<div class="products">
    <h3 style="color: #2980b9">Sản phẩm mới nhất</h3>
    <style>
        .dropbtn {
            background-color: darkcyan;
            color: white;
            padding: 14px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

        .dropdown {

            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content a:hover {
            background-color: #f1f1f1
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #3e8e41;
        }
    </style>

    <div class="row">
        <% product.forEach(item=> { %>
        <div class="col-sm-4 text-center mb-3">
            <div class="card">
                <a href="/productDetail/<%= item._id %>" class="d-block"><img src="<%= item.avatar %> "
                        style="width: 150px; height: 200px" class="card-img-top"></a>
                <div class="card-body">
                    <h4><a href="/productDetail/<%= item._id %> "><%= item.name %> </a></h4>
                    <p>Giá Bán: <span style="text-decoration: line-through"><%= item.price.toLocaleString() %> vnđ</span></p>
                    <p>Giá Mới: <span style="color: red"><%= item.sale_price.toLocaleString() %> vnđ</span></p>
                    <!-- <div class="star">
                        @for ($i = 0; $i < $p->star; $i++)
                            <img src="{{BASE_URL .'public/site/images/star (1).png'}}" alt=""
                                style="width: 15px; height: 15px">
                            @endfor</td>
                    </div> -->
                    <a class="btn btn-primary btn-block mt-3" href="/addToCart/<%= item._id %> ">Mua</a>
                </div>
            </div>
        </div>
        <%  }) %>



    </div>

    <div id="pagination">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="/?page=<%=pagePrev%>">Trang trước</a></li>
            <% for(i=1; i<=totalPage; i++){ %>
        
            <li class="page-item "><a class="page-link" href="/?page=<%=i%>"><%=i%></a></li>
              
            <%}%>
            <li class="page-item"><a class="page-link" href="/?page=<%=pageNext%>/">Trang sau</a></li>
        </ul>
    </div>
</div>
<br>
<br>
